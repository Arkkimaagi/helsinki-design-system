{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["**/*.test.tsx", "**/*.stories.tsx"],
  "compileOnSave": false,
  "buildOnSave": false
}
