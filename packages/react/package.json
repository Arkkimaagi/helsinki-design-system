{
  "name": "hds-react",
  "version": "0.5.5",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib-esm/index.js",
  "scripts": {
    "build": "yarn run lint && yarn run tcm && rollup -c",
    "postbuild": "yarn run copy-css-modules",
    "copy-css-modules": "copyfiles -u 1 src/**/*.module.css** lib && copyfiles -u 1 src/**/*.module.css** lib-esm",
    "start": "rollup -c --watch & tcm src --watch & yarn storybook",
    "scaffold": "node scripts/scaffold.js",
    "tsc:es5": "tsc",
    "tsc:es6": "tsc -m es6 --outDir lib-esm --moduleResolution node",
    "tcm": "tcm src",
    "lint": "yarn eslint \"src/**/*.{ts,tsx}\"",
    "pre-commit": "yarn -s lint",
    "pre-push": "yarn -s test && yarn build",
    "storybook": "start-storybook -p 6006 --quiet",
    "build-storybook": "build-storybook --loglevel error",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@storybook/addon-a11y": "^5.2.4",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-links": "^5.2.4",
    "@storybook/addon-storysource": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.4",
    "@storybook/addons": "^5.2.4",
    "@storybook/react": "^5.2.4",
    "@testing-library/react": "^9.3.0",
    "@types/jest": "^24.0.19",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-plugin-require-context-hook": "^1.0.0",
    "chalk": "^2.4.2",
    "copyfiles": "^2.1.1",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^7.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-scripts": "^3.2.0",
    "react-test-renderer": "^16.10.2",
    "rollup": "^2.1.0",
    "storybook-addon-jsx": "^7.1.13",
    "storybook-addon-root-attribute": "^0.2.2",
    "typed-css-modules": "^0.6.2",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^4.0.0",
    "hds-core": "^0.4.2",
    "lodash": "^4.17.15",
    "react-spring": "^8.0.27",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-typescript2": "^0.26.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  }
}
